@model IEnumerable<Administrativo.Models.empresas>

@{
    ViewBag.Title = "Empresas";
}

<div class="row">
    <div class="col-xs-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <a class="btn btn-labeled btn-success" href="@Url.Action("Create")"><span class="btn-label"><i class="icon-estrela-02"></i></span>Adicionar Empresa</a>
    </div>
</div>
<br />
<div class="row">
    <div class="col-xs-12 col-lg-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Logo</th>
                        <th>Empresa</th>
                        <th>Categoria</th>
                        <th>Vagas por Palestra</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img class="img-thumbnail" src="http://dummyimage.com/120x90/a8a8a8/ffffff" alt="">
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.empresa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.categoria)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.vagasEventos)
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-info" href="@Url.Action("Edit", new { id = item.idEmpresa })"><i class="icon-engrenagem-02 icon-1_5x"></i></a>
                                    <a class="delete-confirmation btn btn-danger" href="@Url.Action("Delete", new { id = item.idEmpresa })"><i class="icon-lixeira-02 icon-1_5x"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
</div>
<!-- /.row -->
